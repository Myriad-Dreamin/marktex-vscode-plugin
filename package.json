{
	"name": "marktex",
	"displayName": "marktex",
	"description": "marktex plugin for Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.compileMarkTeXToHTML",
		"onCommand:extension.previewMarkTeX",
		"onCommand:extension.configurateMarkTeXExtension"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.compileMarkTeXToHTML",
				"title": "Compile MarkTex to HTML"
			},
			{
				"command": "extension.previewMarkTeX",
				"title": "Preview MarkTeX"
			},
			{
				"command": "extension.configurateMarkTeXExtension",
				"title": "Configurate MarkTeX extension"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.1",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
